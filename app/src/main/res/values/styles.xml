<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/button</item>
    </style>

    <style name="title" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/text_activity_title</item>
    </style>

    <style name="subtitle" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/text_activity_subtitle</item>
    </style>

    <style name="button" parent="android:Theme">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textColor">@color/btn_fg</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="button.special">
        <item name="android:background">@drawable/blue_button_style</item>
        <item name="android:textColor">@color/btn_special_fg</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>
