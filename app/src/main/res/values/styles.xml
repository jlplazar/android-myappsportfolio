<resources>

    <color name="orange">#ff6600</color>
    <color name="light_orange">#ff9a48</color>
    <color name="blue">#0000f6</color>
    <color name="deep_blue">#0000b8</color>
    <color name="cream">#f7f7aa</color>
    <color name="white">#ffffff</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonStyle">@style/button</item>
    </style>

    <style name="title" parent="android:TextAppearance.Large">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="subtitle" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="button" parent="android:Theme">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="button.special">
        <item name="android:background">@drawable/blue_button_style</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>
